<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mtu.tourismSocialMediaApplication">

    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tourism Social Media Application"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourismSocialMediaApplication">
        <activity
            android:name=".activities.editEvent.EditEvent"
            android:exported="false"
            android:label="@string/title_activity_edit_event"
            android:theme="@style/Theme.TourismSocialMediaApplication.NoActionBar" />
        <activity
            android:name=".activities.message.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".activities.upcomingEvents.UpcomingEvent"
            android:exported="false" />
        <activity
            android:name=".activities.pastEvents.PastEvent"
            android:exported="false" />
        <activity
            android:name=".activities.createEvent.CreateEvent1"
            android:exported="false" />
        <activity
            android:name=".activities.createEvent.CreateEvent2"
            android:exported="false" />
        <activity
            android:name=".activities.createEvent.CreateEvent"
            android:exported="false" />
        <activity
            android:name=".activities.eventDisplay.EventDisplay"
            android:exported="false" />
        <activity
            android:name=".activities.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activities.suggestedEvents.SuggestedEvent"
            android:exported="false" />
        <activity
            android:name=".activities.signUp.SignUp"
            android:exported="false" />
        <activity
            android:name=".MapsActivity"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activities.login.LoginActivity"
            android:exported="true"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>